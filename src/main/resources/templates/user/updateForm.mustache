{{> /layout/post-header}}

<!-- 컨테이너 시작 -->
<div class="container mt-3">

  <!-- 회원수정 폼 시작 -->
  <!-- 폼태크는 put,delete요청을 할 수 없다. 그래서 자바스크립트로 제어해야 한다. -->
  <form>
      <input type="hidden" id="no" value="{{principal.no}}">
      <div class="mb-3 mt-3">
        <input type="text" class="form-control" value="{{principal.id}}" id="id" readonly>
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" value="{{principal.password}}" id="password" required>
      </div>
      <div class="mb-3 mt-3">
          <input type="email" class="form-control" value="{{principal.email}}" id="email" readonly>
        </div>
        <div class="mb-3 mt-3">
          <input type="text" class="form-control" value="{{principal.createDate}}" id="createDate" readonly>
        </div>
      <button type="button" class="btn btn-secondary" onclick="update()">수정완료</button>
      <button type="button" class="btn btn-secondary" onclick="deleteUser()">회원탈퇴</button>
  </form>
  
    
  
  <!-- 회원수정 폼 끝 -->

</div>
<!-- 컨테이너 끝 -->

<script>
   let no = $("#no").val();
async function update(){
  // 1. jquery로 password, email 찾아서 자바스크립트 오브젝트로 만들기
  let myObj = {
    password: $("#password").val(),
    email: $("#email").val(),
  }
  console.log(myObj);
  // 2. 자바스크립트 오브젝트를 json으로 변환하기
  let json = JSON.stringify(myObj);
  console.log(json);
  // json을 자바스크립트 오브젝트로 변환
  // let userObject = JSON.parse(json);
  // console.log(userObject);
  // 3. fetch 요청하기
  // (1) content-type을 json으로 설정하기
  // (2) put 메서드로 변경하기
  // (3) body 데이터 실어 보내기
 
  console.log(no);
  let response = await fetch("/s/user/" + no, {
    method: "PUT",
    body: json,
    headers: {
         "Content-Type": "application/json; charset=utf-8",
    }
});
console.log(response);
    // (4) ResponseDto로 응답받아서 code가 1이면 alert창으로 수정 성공 띄우기
  let responseObject = await response.json();
  if (responseObject.code == 1) {
      alert("수정에 성공하였습니다.");
      location.href = "/s/user/"+no;
  } else {
      alert("수정에 실패 : " + responseObject.msg)
  }


  // (5) 수정 성공 메시지 이후에 / 메인 화면으로 이동하기 - location.href = "/"
  
} 

async function deleteUser(){
  let response = await fetch(`/s/user/${no}`,{
    method: "DELETE",
  });
  console.log(response);
  let responseObject = await response.json();
  console.log(responseObject);
  if(responseObject.code==1){
    alert("회원탈퇴에 성공하였습니다.");
    location.href="/join-form";
  }else{
    alert("회원탈퇴에 실패 : "+responseObject.msg)
  }
  
}

</script>

